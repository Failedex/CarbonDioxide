
(defwindow barslide
  :geometry (geometry 
              :x "0%"
              :y 0
              :width 1006
              :height 0
              :anchor "top center")
              
  :stacking "bottom"
  :exclusive true
  :monitor 0
  :wm-ignore false
  (box
    :orientation "v"
    :space-evenly false 
    (box 
      :class "customslide"
      :style "min-height: ${revealbar == 0 || overview ? 10 : 50}px; min-width: ${revealbar  > 1 ? 1126 : 1006}px;")))
